@model IEnumerable<PendingAppointmentViewModel>

<div class="container">
    <div class="d-flex align-items-center gap-3 mb-4">
        <a href="/CenterDashboard/Index" class="text-danger text-decoration-none" aria-label="Back to Dashboard">
            <i class="fas fa-arrow-left fa-lg"></i>
            <span class="visually-hidden">Back to Dashboard</span>
        </a>
        <h1 class="mb-0">Pending Appointments</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted">
            <p>No pending appointments at this time.</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 col-lg-8 mx-auto">
                @foreach (var request in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">@request.DonorName</h5>
                                    <p class="card-text mb-0">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i> @request.DonorLocation<br>
                                            <i class="fas fa-tint"></i> @request.DonorBloodType<br>
                                            <i class="fas fa-calendar"></i> @request.RequestDate.ToString("d MMM yyyy")
                                        </small>
                                    </p>
                                </div>
                                <div class="d-flex gap-2">
                                    <form asp-action="ApproveAppointment" method="post">
                                        <input type="hidden" name="id" value="@request.AppointmentId" />
                                        <button type="submit" class="btn btn-success rounded-circle"
                                            style="width: 40px; height: 40px;">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    <form asp-action="RejectAppointment" method="post">
                                        <input type="hidden" name="id" value="@request.AppointmentId" />
                                        <button type="submit" class="btn btn-danger rounded-circle"
                                            style="width: 40px; height: 40px;">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>