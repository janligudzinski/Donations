@using Donations.Entities.Medical
@model IEnumerable<AppointmentViewModel>

<div class="container">
    <div class="d-flex align-items-center gap-3 mb-4">
        <a href="/DonorDashboard/Index" class="text-danger text-decoration-none" aria-label="Back to Dashboard">
            <i class="fas fa-arrow-left fa-lg"></i>
            <span class="visually-hidden">Back to Dashboard</span>
        </a>
        <h1 class="mb-0">My Appointments</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted">
            <p>No upcoming appointments.</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 col-lg-8 mx-auto">
                @foreach (var appointment in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title mb-1">@appointment.CenterName</h5>
                                    <p class="card-text mb-0">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i> @appointment.CenterLocation<br>
                                            <i class="fas fa-calendar"></i> @appointment.Date.ToString("d MMM yyyy")<br>
                                            <i class="fas fa-tint"></i> @appointment.RequestedBloodTypes
                                        </small>
                                    </p>
                                </div>
                                <span
                                    class="badge @(appointment.State == AppointmentState.Accepted ? "bg-success" : "bg-warning")">
                                    @(appointment.State == AppointmentState.Accepted ? "Accepted" : "Pending")
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>