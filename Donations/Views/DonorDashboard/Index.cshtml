@using Donations.Entities.Medical
@model DonorDashboardViewModel

<div class="text-center d-flex flex-column align-items-center">
    <h1>Welcome @Model.Donor.User.FullName</h1>
    <p>You're a donor from @Model.Donor.Location.Name, of blood type @Model.Donor.BloodType.ToHumanReadableString().</p>
    <p>You have earned <b>@Model.Donor.Points</b> points for your donations so far.</p>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <div class="col">
                        <a href="/DonorDashboard/Urgent" class="text-decoration-none">
                            <div class="card h-100 hover-shadow text-danger">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center"
                                    style="aspect-ratio: 1;">
                                    <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                                    <h3 class="card-title">Urgent</h3>
                                    <p class="card-text text-muted">Critical blood needs</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/DonorDashboard/Available" class="text-decoration-none">
                            <div class="card h-100 hover-shadow text-danger">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center"
                                    style="aspect-ratio: 1;">
                                    <i class="fas fa-hand-holding-medical fa-3x mb-3"></i>
                                    <h3 class="card-title">Available</h3>
                                    <p class="card-text text-muted">Current requests</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/DonorDashboard/Campaigns" class="text-decoration-none">
                            <div class="card h-100 hover-shadow text-danger">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center"
                                    style="aspect-ratio: 1;">
                                    <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                                    <h3 class="card-title">Campaigns</h3>
                                    <p class="card-text text-muted">Upcoming drives</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease-in-out;
        transform: translateY(-5px);
        transition: transform 0.2s ease-in-out;
    }

    .card {
        border: 2px solid #dc3545;
        transition: all 0.2s ease-in-out;
    }

    .card:hover {
        border-color: #dc3545;
        background-color: #dc3545;
        color: white !important;
    }

    .card:hover .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }

    .card:hover .text-danger {
        color: white !important;
    }
</style>