@using Donations.Entities.Medical
@model DonorDashboardViewModel

<div class="row justify-content-center">
    <div class="col-md-10">
        <!-- Info Banner -->
        <a href="https://www.khcc.jo/en/donate-blood" target="_blank" class="text-decoration-none mb-4 d-block">
            <div class="card bg-danger text-white">
                <div class="card-body p-4">
                    <h3 class="mb-2">Save a life, give blood</h3>
                    <p class="mb-0">Learn how and why <i class="fas fa-arrow-right ms-2"></i></p>
                </div>
            </div>
        </a>

        <!-- Action Tiles -->
        <div class="row g-3 mb-4">
            <div class="col-4">
                <a href="/DonorDashboard/Urgent" class="text-decoration-none">
                    <div class="card h-100 hover-shadow text-danger">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center"
                            style="aspect-ratio: 1;">
                            <i class="fas fa-exclamation-circle fa-2x mb-2"></i>
                            <h5 class="card-title mb-0">Urgent</h5>
                            <small class="text-muted text-center my-2">Critical needs</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-4">
                <a href="/DonorDashboard/Available" class="text-decoration-none">
                    <div class="card h-100 hover-shadow text-danger">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center"
                            style="aspect-ratio: 1;">
                            <i class="fas fa-hand-holding-medical fa-2x mb-2"></i>
                            <h5 class="card-title mb-0">Available</h5>
                            <small class="text-muted text-center my-2">Regular requests</small>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-4">
                <a href="/DonorDashboard/Campaigns" class="text-decoration-none">
                    <div class="card h-100 hover-shadow text-danger">
                        <div class="card-body d-flex flex-column align-items-center justify-content-center"
                            style="aspect-ratio: 1;">
                            <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                            <h5 class="card-title mb-0">Campaigns</h5>
                            <small class="text-muted text-center my-2">Upcoming drives</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Status Check -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock fa-2x text-danger me-3"></i>
                        <div>
                            <h5 class="mb-0">Appointment Status</h5>
                            <small class="text-muted">Track your donations</small>
                        </div>
                    </div>
                    <a href="/DonorDashboard/Appointments" class="btn btn-danger">Check Status</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease-in-out;
        transform: translateY(-5px);
        transition: transform 0.2s ease-in-out;
    }

    .card {
        border: 2px solid #dc3545;
        transition: all 0.2s ease-in-out;
    }

    .bg-danger {
        border: none !important;
    }

    .hover-shadow.card:hover {
        border-color: #dc3545;
        background-color: #dc3545;
        color: white !important;
    }

    .hover-shadow.card:hover .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }

    .hover-shadow.card:hover .text-danger {
        color: white !important;
    }
</style>