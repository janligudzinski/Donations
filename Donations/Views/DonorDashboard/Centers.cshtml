@model NearestDonationCentersViewModel

<div class="container">
    <h1 class="mb-4">Nearest Donation Centers</h1>

    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            @foreach (var (center, distance) in Model.DonationCentersWithDistances)
            {
                <a href="/Centers/@center.Id" class="text-decoration-none mb-3 d-block">
                    <div class="card hover-shadow">
                        <div class="card-body">
                            <h5 class="card-title">@center.Name</h5>
                            <p class="card-text">
                                <i class="bi bi-geo-alt"></i> @center.Location.Name<br>
                                <small class="text-muted">
                                    <i class="bi bi-arrow-right-circle"></i> @(Math.Round(distance, 2)) km away
                                </small>
                            </p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease-in-out;
    }
</style>