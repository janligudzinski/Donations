@model NearestDonationCentersViewModel

<div class="container">
    <h1 class="mb-4">Nearest Donation Centers</h1>

    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            @foreach (var (center, distance) in Model.DonationCentersWithDistances)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fas fa-hospital fa-2x text-danger"></i>
                            <div>
                                <h5 class="card-title mb-2">@center.Name</h5>
                                <p class="card-text mb-0">
                                    <i class="fas fa-map-marker-alt"></i> @center.Location.Name<br>
                                    <small class="text-muted">
                                        <i class="fas fa-route"></i> @(Math.Round(distance, 2)) km away
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease-in-out;
    }
</style>